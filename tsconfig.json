{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./src", 
    "baseUrl": "./", 
    "paths": {
      "@a/*": ["./src/a/*"]
    },
    "outDir": "./dist",  
    "esModuleInterop": true,  
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "noImplicitAny": true, 
    "noUnusedLocals": true,
    "noUnusedParameters": true, 
    "noImplicitReturns": true,  
    "skipLibCheck": true
  },
  "include": ["src/**/**.ts"],
  "exclude": ["/node_modules"]
}
